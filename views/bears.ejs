<!DOCTYPE html>
<html>
	<head>
		
		<title>bears</title>
		
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		
		<link rel="stylesheet" type="text/css" href="main.css">
	
	</head>
	
	<body>
		<div class="jumbotron">
			<div class="container">
				<h1>All the bears we got</h1>
				<p>Contents ...</p>
				<p>
					<a href="/" class="btn btn-primary btn-lg">Home</a>
				</p>
				<p>
			</div>
		</div>
		<section>
			<div class="panel panel-default">
			  <!-- Default panel contents -->
			  <div align="center" class="panel-heading">All of the bears</div>

				  <!-- Table -->
				  <table class="table table-hover">
				  	<thead>
				  		<tr>
				  			<th>Name</th>
				  			<th>Age</th>
				  			<th>Gender</th>
				  		</tr>
				  	</thead>
				  	<tbody id="bearTable">
					  	<% for(var i = 0; i < bears.length; i++) { %>	
					  		<tr>
					  			<td> <%= bears[i].name %> </td>
					  			<td> <%= bears[i].age %> </td>
					  			<td> <%= bears[i].gender %> </td>
					  			<td>
					  				<button data-id="<%= bears[i].id %>" class="btn btn-default deleteBear" type="delete">
					  					d🐻l🐻t🐻
					  				</button> 
					  			</td>
					  		</tr>
					  	<% }; %>
				  	</tbody>
				  </table>
			</div>
		</section>
			<div></div>
		<section>
			<form class="form">
			  	<div class="form-group">
			    	<label for="inputEmail3" class="col-sm-2 control-label">Name</label>
			    		<div  class="col-sm-10">
			      			<input id="name" name="name" type="text" class="form-control" placeholder="Name">
			    		</div>
			  	</div>
			  	<div class="form-group">
			    	<label for="inputPassword3" class="col-sm-2 control-label">Age</label>
			    		<div class="col-sm-10">
			      			<input id="age" name="age" type="text" class="form-control" placeholder="Age">
			    </div>
			  	<div class="form-group">
			    	<label for="inputPassword3" class="col-sm-2 control-label">Gender</label>
			    		<div class="col-sm-10">
			      			<input id="gender" name="gender" type="text" class="form-control" placeholder="Gender">
			    		</div>
			  	<div class="form-group">
			    	<div class="col-sm-offset-2 col-sm-10">
			      		<button id="addBear" type="submit" class="btn btn-default">🐻</button>
			    	</div>
			  	</div>
			</form>
		</section>

		<script src="https://code.jquery.com/jquery-2.2.0.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
		<script src="app.js"></script>
	
	</body>
</html>